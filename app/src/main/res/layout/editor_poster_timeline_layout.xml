<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dot_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_5sdp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:shapeAppearanceOverlay="@style/OverlayButtonCircle" />

    <View
        android:id="@+id/divider"
        style="@style/vertical_divider"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="@id/dot_btn"
        app:layout_constraintEnd_toEndOf="@id/dot_btn"
        app:layout_constraintTop_toBottomOf="@id/dot_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/short_poster_btn"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_40sdp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:enabled="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dot_btn"
        android:layout_marginStart="@dimen/_2sdp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/ic_album"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/colorPrimary"
        app:iconSize="@dimen/_25sdp"/>

    <me.ngarak.timeagotextview.TimeAgoTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/time_ago"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_margin="@dimen/_5sdp"
        style="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toEndOf="@id/short_poster_btn"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/post_summary"
        android:maxLines="4"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/short_poster_btn"
        app:layout_constraintTop_toBottomOf="@id/time_ago"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>